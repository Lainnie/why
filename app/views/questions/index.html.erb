<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>View</th>
      <th>Interest</th>
      <th>Active</th>
      <th>Creation</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= truncate(question.title, length: 30, omission: '...') %></td>
        <td><%= truncate(question.content, length: 50, omission: '...') %></td>
        <td><%= question.view %></td>
        <td><%= question.interest %></td>
        <td><%= question.active %></td>
        <td><%= question.created_at %></td>
        <td>
          <%= link_to 'Show', question_answers_path(question) %>
          <%= link_to 'Edit', edit_question_path(question) %>
          <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>
