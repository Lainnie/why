<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Interest</th>
      <th>Creation</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= truncate(answer.content, length: 50, omission: '...') %></td>
        <td><%= answer.interest %></td>
        <td><%= answer.created_at %></td>
        <td><%= link_to 'Show', question_answer_path(@question, answer) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(@question, answer) %></td>
        <td><%= link_to 'Destroy', question_answer_path(@question, answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_question_answer_path(@question) %>
